{
  "name": "@tinisoftin/tsdatagrid",
  "version": "1.0.0",
  "description": "Advanced, feature-rich data grid component for Vue 3 with TypeScript support",
  "type": "module",
  "main": "./dist/tsdatagrid.umd.js",
  "module": "./dist/tsdatagrid.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/tsdatagrid.es.js",
      "require": "./dist/tsdatagrid.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode lib",
    "build:dev": "vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "keywords": [
    "vue",
    "vue3",
    "typescript",
    "datagrid",
    "datatable",
    "grid",
    "table",
    "odata",
    "components"
  ],
  "author": "Tinisoft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tinisoft/tstable.git"
  },
  "bugs": {
    "url": "https://github.com/tinisoft/tstable/issues"
  },
  "homepage": "https://github.com/tinisoft/tstable#readme",
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "dependencies": {
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.4",
    "papaparse": "^5.4.1",
    "vue-router": "^4.6.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.19.21",
    "@types/papaparse": "^5.3.14",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "vite": "^4.5.14",
    "vite-plugin-dts": "^3.9.1",
    "vitepress": "^1.6.4",
    "vitest": "^0.34.6",
    "vue": "^3.5.22",
    "vue-tsc": "^1.8.27"
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
